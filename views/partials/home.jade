div(show-during-resolve).loadingLayer.ease
	h1: i
section#homeCover.splash.bg(style="background-image:url('../Dancing-Tails-Dog-Training-low.jpg')")
	figure#homeLogo
		img(src="Dancing-Tails-Logo-Black-low.png")#logoText
		img(src="Dancing-Tails-Logo-Lab-low.png")#logoDog1
		img(src="Dancing-Tails-Logo-Basset-low.png")#logoDog2
		img(src="Dancing-Tails-Logo-Huskey-low.png")#logoDog3
	div(style="top:auto;bottom:4%").hideBottom
		h1: span.glyphicon.glyphicon-chevron-down(ng-click="moveDown()").ease
section.container#customer
	h1.title Customer Testimonials
	p.small See what past clients have said about Dancing Tails Dog Training
	div.grid-half
		div.panelContainer(ng-repeat="review in reviews | slice:0:reviews.length/2")
			div.panel
				p.italic "{{review.text}}"
			div.panel
				figure.thumbnail
					img(src="{{review.image}}")
				div.customerInfo
					p.bold.green {{review.author}}
					p.italic {{review.location}}
	div.grid-half
		div.panelContainer(ng-repeat="review in reviews | slice:reviews.length/2:reviews.length")
			div.panel
				p.italic "{{review.text}}"
			div.panel
				figure.thumbnail
					img(src="{{review.image}}")
				div.customerInfo
					p.bold.green {{review.author}}
					p.italic {{review.location}}
section.pageEnd
	figure.banner#homeEnd(style="background-image:url('../French-Bulldog-Portrait2-standard.jpg')").bg
		div
			h1 Dog Training Services
			p.small puppy training | basic obedience | problem behaviors
			a(href="/services"): button.ease View Services